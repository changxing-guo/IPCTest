package com.example.firstapp;

import android.content.ComponentName;
import android.content.Intent;
import android.content.ServiceConnection;
import android.os.IBinder;
import android.os.RemoteException;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.util.Log;
import android.view.View;
import android.widget.Button;

import com.example.ipctest.Book;
import com.example.ipctest.BookManager;
import java.util.List;

public class FirstActivity extends AppCompatActivity implements View.OnClickListener{

    private static final String TAG = "FirstApp-first";

    /**
     * A Java class generated by an AIDL file
     */
    private BookManager mBookManager = null;

    private boolean mBound = false;

    private List<Book> mBooks;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        Log.d(TAG, "onCreate: ");
        setContentView(R.layout.first_layout);
        Button button_second = (Button) findViewById(R.id.second);
        button_second.setOnClickListener(this);
        Button button_third = (Button) findViewById(R.id.third);
        button_third.setOnClickListener(this);
    }

    @Override
    public void onClick(View v) {
        switch (v.getId()) {
            case R.id.second:
                Intent intent1 = new Intent(FirstActivity.this, SecondActivity.class);
                startActivity(intent1);
                break;
            case R.id.third:
                Intent intent2 = new Intent(FirstActivity.this, ThirdActivity.class);
                startActivity(intent2);
                break;
            default:
                break;
        }
    }

    @Override
    protected void onStart() {
        super.onStart();
        Log.d(TAG, "onStart: ");
        registerAidlServer();
    }

    @Override
    protected void onResume() {
        super.onResume();
        Log.d(TAG, "onResume: ");
    }

    @Override
    protected void onPause() {
        super.onPause();
        Log.d(TAG, "onPause: ");
    }

    @Override
    protected void onStop() {
        super.onStop();
        Log.d(TAG, "onStop: ");
        unRegisterAidlServer();
    }

    @Override
    protected void onDestroy() {
        super.onDestroy();
        Log.d(TAG, "onDestroy: ");
    }

    @Override
    protected void onRestart() {
        super.onRestart();
        Log.d(TAG, "onRestart: ");
    }

    private ServiceConnection mServiceConnection = new ServiceConnection() {
        @Override
        public void onServiceConnected(ComponentName name, IBinder service) {
            Log.e(getLocalClassName(), "service connected");
            mBookManager = BookManager.Stub.asInterface(service);
            mBound = true;

            if (mBookManager != null) {
                try {
                    mBooks = mBookManager.getBooks();
                    Log.e(getLocalClassName(), mBooks.toString());
                } catch (RemoteException e) {
                    e.printStackTrace();
                }
            }
        }

        @Override
        public void onServiceDisconnected(ComponentName name) {
            Log.e(getLocalClassName(), "service disconnected");
            mBound = false;
        }
    };

    void registerAidlServer() {
        Intent mIntent = new Intent();
        mIntent.setAction("com.example.ipctest.BookManagerService");
        mIntent.setPackage("com.example.ipctest");
        bindService(mIntent, mServiceConnection, BIND_AUTO_CREATE);
    }

    void unRegisterAidlServer() {
        unbindService(mServiceConnection);
    }

}
